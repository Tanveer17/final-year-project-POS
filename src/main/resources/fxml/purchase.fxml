<BorderPane fx:id="parent" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tanveer.controllers.PurchaseController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
      <VBox BorderPane.alignment="CENTER_LEFT">
         <children>
             <Button mnemonicParsing="false" onAction="#getBack" prefHeight="37.0" prefWidth="125.0">
                 <graphic>
                     <ImageView fitHeight="25.0" fitWidth="36.0" focusTraversable="true">
                         <image>
                             <Image url="@/icons/back.png" />
                         </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     </ImageView>
                 </graphic>
             </Button>
               <ListView fx:id="list" focusTraversable="false" prefHeight="400.0" prefWidth="125.0" style="" VBox.vgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ListView>
         </children>
      </VBox>
    </left>
    <center>
        <HBox>
            <StackPane alignment="TOP_CENTER" prefHeight="400.0" prefWidth="465.0" HBox.hgrow="ALWAYS">
            <children>
               <ToolBar prefHeight="40.0" prefWidth="524.0">
                  <items>
                     <Label prefHeight="13.0" prefWidth="48.0" text="Code:" />
                     <Label fx:id="itemsCode" prefHeight="26.0" prefWidth="88.0" text="5054" />
                     <Label prefHeight="7.0" prefWidth="53.0" text="Name:" />
                     <Label prefHeight="12.0" prefWidth="300.0" text="Grase" />
                  </items>
               </ToolBar>
               <TableView fx:id="purchaseTable" focusTraversable="false" prefHeight="433.0" prefWidth="899.0">
                  <StackPane.margin>
                     <Insets top="40.0" />
                  </StackPane.margin>
               </TableView>
            </children></StackPane>

        </HBox>
    </center>
   <bottom>
      <HBox prefHeight="102.0" prefWidth="524.0" BorderPane.alignment="BOTTOM_CENTER">
         <BorderPane.margin>
            <Insets left="500.0" />
         </BorderPane.margin></HBox>
   </bottom>
    



